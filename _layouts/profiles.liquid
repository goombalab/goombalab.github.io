---
layout: page
---
<div class="post">
  <article>

    <div class="clearfix">{{ content }}</div>

    {% if page.profiles %}
      <!-- Display the PI's profile at the top -->
      {% assign pi_profile = page.profiles | where: "role", "PI" | first %}
      {% if pi_profile %}
        <hr>
        <div>
          <h4>faculty</h4>
        </div>
        <div class="pi-grid">
          <div class="profile pi-profile">
            {% if pi_profile.image %}
              {% assign profile_image_path = pi_profile.image | prepend: 'assets/img/' %}
              {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
              {% capture sizes %}(min-width: {{site.max_width}}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px) 30vw, 95vw"{% endcapture %}
              {% include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=pi_profile.image %}
            {% endif %}
            <!-- Add name under the picture -->
            {% if pi_profile.name %}
              <h3>{{ pi_profile.name }}</h3>
            {% endif %}
            {% if pi_profile.more_info %}
              <div class="more-info">{{ pi_profile.more_info }}</div>
            {% endif %}
            <!-- Add URL options with Font Awesome icons -->
            <div class="profile-links">
              {% if pi_profile.google_scholar %}
                <a href="{{ pi_profile.google_scholar }}" target="_blank"><i class="fab fa-google-scholar"></i></a>
              {% endif %}
              {% if pi_profile.website %}
                <a href="{{ pi_profile.website }}" target="_blank"><i class="fas fa-globe"></i></a>
              {% endif %}
              {% if pi_profile.github %}
                <a href="{{ pi_profile.github }}" target="_blank"><i class="fab fa-github"></i></a>
              {% endif %}
              {% if pi_profile.twitter %}
                <a href="{{ pi_profile.twitter }}" target="_blank"><i class="fab fa-twitter"></i></a>
              {% endif %}
            </div>
          </div>
          <div class="clearfix"></div>
        </div>
      {% endif %}
      <div>
        <h4>ph.d. students</h4>
        <p class="post-description">randomized order</p>
      </div>
      <div id="student-profiles" class="student-grid">
        {% assign student_profiles = page.profiles | where: "role", "phd-student" %}
        {% for profile in student_profiles %}
          <div class="profile">
            {% if profile.image %}
              {% assign profile_image_path = profile.image | prepend: 'assets/img/' %}
              {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
              {% capture sizes %}(min-width: {{site.max_width}}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px) 30vw, 95vw"{% endcapture %}
              {% include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=profile.image %}
            {% endif %}
            <!-- Add name under the picture -->
            {% if profile.name %}
              <h3>{{ profile.name }}</h3>
            {% endif %}
            {% if profile.more_info %}
              <div class="more-info">{{ profile.more_info }}</div>
            {% endif %}
            <!-- Add URL options with Font Awesome icons -->
            <div class="profile-links">
              {% if profile.google_scholar %}
                <a href="{{ profile.google_scholar }}" target="_blank"><i class="fab fa-google-scholar"></i></a>
              {% endif %}
              {% if profile.website %}
                <a href="{{ profile.website }}" target="_blank"><i class="fas fa-globe"></i></a>
              {% endif %}
              {% if profile.github %}
                <a href="{{ profile.github }}" target="_blank"><i class="fab fa-github"></i></a>
              {% endif %}
              {% if profile.linkedin %}
                <a href="{{ profile.linkedin }}" target="_blank"><i class="fab fa-linkedin"></i></a>
              {% endif %}
              {% if profile.twitter %}
                <a href="{{ profile.twitter }}" target="_blank"><i class="fab fa-twitter"></i></a>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </article>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Function to shuffle an array
    function shuffle(array) {
      for (let i = array.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [array[i], array[j]] = [array[j], array[i]];
      }
      return array;
    }

    // Get the student profiles container
    const studentProfilesContainer = document.getElementById('student-profiles');

    // Check if the container exists
    if (studentProfilesContainer) {
      // Convert HTMLCollection to Array
      const studentProfiles = Array.from(studentProfilesContainer.children);

      // Shuffle the student profiles
      const shuffledProfiles = shuffle(studentProfiles);

      // Clear the container
      studentProfilesContainer.innerHTML = '';

      // Append the shuffled profiles
      shuffledProfiles.forEach(profile => studentProfilesContainer.appendChild(profile));
    }
  });
</script>

<style>
.student-grid {
  display: flex;
  flex-direction: column;
  gap: 20px;
}
@media (min-width: 768px) {
  .student-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
  }
}

.pi-grid {
  display: flex;
  flex-direction: column;
  gap: 20px;
}
@media (min-width: 768px) {
  .pi-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
  }
}

.profile {
  margin-bottom: 20px;
  text-align: center;
  width: 100%;
}
.profile img {
  border-radius: 50%;
  width: 200px; /* Ensure the image is a perfect circle */
  height: 200px; /* Ensure the image is a perfect circle */
  object-fit: cover; /* Ensure the image covers the circle perfectly */
}
.pi-profile img {
  width: 150px; /* Larger size for the PI profile picture */
  height: 150px; /* Ensure the image is a perfect circle */
  border-radius: 50%; /* Ensure the image is a perfect circle */
  object-fit: cover; /* Ensure the image covers the circle perfectly */
}
.profile h3 {
  margin-top: 10px;
}
.profile .more-info {
  max-width: 150px;
  margin: 0 auto;
}
.pi-profile .more-info {
  max-width: 500px;
  margin: 0 auto;
}
.profile-links a {
  display: inline-block;
  margin: 5px 10px;
  font-size: 1.2em;
  color: #333;
}
.profile-links a:hover {
  color: #007bff;
}
</style>
